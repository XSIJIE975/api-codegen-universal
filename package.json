{
  "name": "api-codegen-universal",
  "version": "0.1.0",
  "description": "通用的 API 代码生成器核心库，支持将 OpenAPI、Apifox 等格式转换为标准化数据结构",
  "type": "module",
  "keywords": [
    "openapi",
    "swagger",
    "apifox",
    "codegen",
    "typescript",
    "api",
    "parser"
  ],
  "author": "XSIJIE975",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/XSIJIE975/api-codegen-universal.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @api-codegen/core dev",
    "build": "pnpm --filter @api-codegen/core build",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
